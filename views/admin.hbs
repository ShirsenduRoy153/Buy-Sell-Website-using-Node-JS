<!DOCTYPE html>
<html>

<head>
    <title>Admin Panel</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<style>


    .container {
        margin-top: 50px;
    }

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        transition: 0.3s;
        padding: 20px;
        margin-bottom: 20px;
    }

    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
    }

    .card-title {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .card-text {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .btn {
        border-radius: 25px;
        font-size: 18px;
        font-weight: bold;
        padding: 10px 20px;
        margin-top: 20px;
    }

    .btn-danger:hover {
        background-color: #CBC3E3;
        border-color: #CBC3E3;
    }

    .sidebar {
        height: 100%;
        width: 210px;
        position: fixed;
        z-index: 1;
        top: 65px;
        left: 0;
        background-color: #868d93;
        overflow-x: hidden;
        padding-top: 40px;
    }

    .sidebar .btn-primary {
        display: block;
        width: 100%;
        text-align: left;
        border-radius: 25px 0 0 25px;
        margin: 0;
        margin-bottom: 15px;
        margin-left: 5px;
    }

    .sidebar .btn-primary:hover {
        background-color: #CBC3E3;
    }

    .btn-primary {
        background-color: #8FBC8F;
        border-color: #8FBC8F;
    }

    .btn-primary:hover {
        background-color: #CBC3E3;
        border-color: #CBC3E3;
    }

    .main_header {
        background-color: #000000;
        color: #fff;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
    }

    .main {
        margin-left: 200px;
        padding: 0px 5px 10px 10px;
    }

    .header {
        background-color: #000000;
        color: #fff;
        padding: 10px;
        text-align: center;
        font-size: 30px;
        font-weight: bold;
    }

    .profile-button {
        position: fixed;
        top: 10px;
        right: 20px;
        background-color: #fff;
        border: 2px solid #8FBC8F;
        border-radius: 100%;
        padding: 8px;
        box-shadow: 0px 0px 10px 0px rgba(0, 0, 0, 0.2);
        transition: all 0.3s;
    }

    .profile-button img {
        width: 30px;
        height: 30px;
        border-radius: 50%;
    }

    .profile-button:hover {
        background-color: #8FBC8F;
        color: #fff;
    }
</style>

</head>

<body>
    <div class="profile-button" data-toggle="modal" data-target="#profileModal">
    <span>ðŸ‘¤</span>
    <button hidden>Profile</button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="profileModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="profileModalLabel">Profile Information</h5>
            </button>
        </div>
        <div class="modal-body">
            <input type="number" value="{{userId}}" id="userId" hidden>
            <p>Firstname:<input type="text" value="{{admins.firstname}}" id="firstname"></p>
            <p>Lastname: <input type="text" value="{{admins.lastname}}" id="lastname"></p>
            <p>Email: <input type="text" value="{{admins.email}}" id="email"></p>
            <p>Phone:<input type="text" value="{{admins.phone}}" id="phone"></p>
            <p>Password:<input type="text" value="{{admins.password}}" id="password"></p>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" id="saveButton">Save</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
        </div>
    </div>
    </div>
    <div class="main_header">
        <div class="header">Admin Panel</div>
    </div>
    <div class="sidebar">
        <a href="/admin_category" class="btn btn-primary">Category</a>
        <a href="/admin_table" class="btn btn-primary" >Tables</a>
        <a href="/admin_order" class="btn btn-primary" >Orders</a>
        <a href="/admin_user" class="btn btn-primary" >Customer Details</a>
    </div>
    <div class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-title">Total Sales</div>
                        <div class="card-text">$ {{totalPrice}}</div>
                        <a href="/admin_order" class="btn btn-primary">View Details</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-title">Total Orders</div>
                        <div class="card-text">{{numberOfOrders}}</div>
                        <a href="/admin_order" class="btn btn-primary">View Details</a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-title">Total Customers</div>
                        <div class="card-text">{{numberOfCustomer}}</div>
                        <a href="/admin_user" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).on('click', '#saveButton', function() {
            var userId = $("#userId").val();
            var firstname = $("#firstname").val();
            var lastname = $("#lastname").val();
            var phone = $("#phone").val();
            var email = $("#email").val();
            var password = $("#password").val();
            $.ajax({
                type: "POST",
                url: "/update_admin",
                data: { 
                    id : userId,
                    firstname : firstname,
                    lastname : lastname,
                    phone : phone,
                    email : email,
                    password : password
                 },
                success: function(response) {
                    console.log('Server response:', response);
                    window.location.reload();
                },
                error: function(error) {
                    console.log('Error:', error);
                }
            });
        });
    </script>
</body>
</html>
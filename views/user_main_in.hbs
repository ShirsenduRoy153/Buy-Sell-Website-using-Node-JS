    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
        }
        
        header {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
        
        header h1 {
            font-size: 28px;
            font-weight: bold;
        }
        
        nav {
            background-color: #444;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
        
        nav input[type="text"] {
            width: 300px;
        }
        
        section {
            padding: 20px;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }
        
        .category-box {
            width: 200px;
            margin: 20px;
            padding: 10px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            cursor: pointer;
        }
        
        .category-box img {
            max-width: 100%;
            height: 150px;
            border-radius: 5px;
            margin-bottom: 10px;
        }
        
        footer {
            background-color: #333;
            color: #fff;
            padding: 10px;
            text-align: center;
        }
        
        .suggestions {
            position: absolute;
            width: 300px;
            z-index: 1;
            background-color: #fff;
            border: 1px solid #ddd;
            max-height: 150px;
            overflow-y: auto;
        }
        
        .suggestions a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: #333;
        }
        
        .suggestions a:hover {
            background-color: #eee;
        }
        
        .category-box,
        button {
            transition: transform 0.3s ease-in-out;
        }
        
        .category-box:hover,
        button:hover {
            transform: scale(1.05);
        }
        
        .btn {
            border: 2px solid #fff;
            border-radius: 100px;
            margin: 0 5px;
        }
        
        .btn-danger {
            border-color: #ebe40c;
            background-color: #070401;
            color: #fff;
        }
        /* Style for profile button */
        
        .btn-primary {
            border-color: #ffffff;
            background-color: #625c68;
            color: #fff;
        }
        
        body.dark-mode {
            background-color: #333;
            color: #fff;
        }
        
        .dark-mode header {
            background-color: #555;
            /* Update the header background color */
            color: #fff;
        }
        
        .dark-mode nav {
            background-color: #666;
            /* Update the nav background color */
            color: #fff;
        }
        
        .dark-mode .category-box {
            background-color: #333;
            /* Update the category box background color */
            color: #fff;
        }
        
        .dark-mode footer {
            background-color: #555;
            /* Update the footer background color */
            color: #fff;
        }
        
        .dark-mode .btn {
            border-color: #fff;
            color: #fff;
        }
        
        .dark-mode .suggestions {
            background-color: #444;
            /* Update the suggestions background color */
            border-color: #555;
            color: #fff;
        }
        
        .dark-mode .suggestions a {
            color: #fff;
        }
        
        .dark-mode .suggestions a:hover {
            background-color: #666;
            /* Update the suggestions hover background color */
        }
        
        section {
            display: none;
        }
